<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summary_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="0, 1">

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/name_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/name_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:id="@+id/syst_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/systolic_reading"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/sys_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:id="@+id/dia_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/diastolic_reading"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/dia_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:layout_row="2"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/cond_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/avgCond"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:id="@+id/cond_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:layout_row="3"
        android:layout_column="1"/>
</GridLayout>