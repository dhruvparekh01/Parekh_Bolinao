<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frag"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/currUser"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/current_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/user_id"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="textPersonName"
            android:hint="@string/name_hint" />

        <TextView
            android:id="@+id/systolic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:text="@string/systolic_label"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/systolic_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_row="2"
            android:layout_column="1"
            android:inputType="number"
            android:hint="@string/reading_hint" />

        <TextView
            android:id="@+id/diastolic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/diastolic_label"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/diastolic_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:layout_column="1"
            android:layout_row="3"
            android:inputType="number"
            android:hint="@string/reading_hint" />

        <Button
            android:id="@+id/clear_user"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:text="@string/clearUser"/>

        <Button
            android:id="@+id/add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="12dp"
            android:text="@string/addUser" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setUserText"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"/>

        <ListView
            android:id="@+id/existing_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</LinearLayout>